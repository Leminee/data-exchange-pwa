<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <link href="/css/user-profil.css" rel="stylesheet" type="text/css">
    <link href="/images/icons/icon256px.png" rel="icon">
    <link href="/images/icons/icon256px.png" rel="apple-touch-icon">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <title>Benutzerprofil</title>
</head>
<body onload="insertProfilData();">  
 <span>
        <% if (typeof succ != 'undefined') { %> <% succ.forEach(error => { %>
        <p id="succ"><%= error.message %></p>
        <% }) %> <% } %>
        </span> 


<div class="main-content"> 

    
       
        

    <!-- Top navigationsbar -->
</div>
<!-- Header -->
<div class="header pb-8 pt-5 pt-lg-8 d-flex align-items-center">
    <!-- Mask -->
    <span class="mask bg-gradient-default opacity-8"></span>
    <!-- Header container -->
    <div class="container-fluid d-flex align-items-center">
        <div class="row">
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--7">
    <div class="row">
        <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
            <div class="card card-profile shadow">

                <div class="card-body pt-0 pt-md-4">
                    <div class="row">
                        <div class="col">
                            <div class="card-profile-stats d-flex justify-content-center mt-md-5">
                                <div class="text-center">
                                    <div class="burger">
                                        <a class="btn btn-sm btn-primary" href="/edit-profil">Profil bearbeiten</a>
                                        <a class="btn btn-sm btn-primary" href="/upload-form">Dateien hochladen</a>
                                        <a class="btn btn-sm btn-primary" href="/user-profil/profil/data">Meine
                                            Dateien</a>
                                        <a class="btn btn-sm btn-primary" href="/pic-maker">Bild aufnehmen</a>
                                        <a class="btn btn-sm btn-primary" href="/voice-maker">Audio aufnehmen</a> 
                                        <a class="btn btn-sm btn-primary" href="/faq">F.A.Q</a> 
                                         
                                       
                                       <form action="/logout" method="post">
                                            <button class="btn btn-sm btn-primary" type="submit">Ausloggen</button>
                                        </form>
                                        <div id="profilPicture">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-8 order-xl-1">
                        <div class="card-header bg-white border-0">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3 class="mb-0">Mein Account</h3>
                                </div>

                            </div>
                            <div class="card-body">
                                <form>
                                    <h6 class="heading-small text-muted mb-4">Allgemeine Informationen</h6>
                                    <div class="pl-lg-4">
                                        <div class="row">

                                            <div class="col-lg-6">
                                                <label class="form-control-label"
                                                       for="input-last-name">E-Mail-Adresse:</label>
                                                <div class="form-group" id="tempEmail">
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <label class="form-control-label"
                                                       for="input-last-name">Username:</label>
                                                <div class="form-group" id="tempUsername">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-6">

                                                <label class="form-control-label" for="input-first-name">Anzahl
                                                    Ordner</label>
                                                <div class="form-group focused" id="numberFolder">

                                                </div>

                                                <label class="form-control-label" for="input-last-name">Anzahl
                                                    Dateien</label>
                                                <div class="form-group focused" id="numberFile">
   
 
                                                </div>  

                                            </div> 
                                            <div class="row">
                                                <div class="col-lg-6">

                                            <label class="form-control-label" for="input-last-name">Verbrauchter Speicherplatz in MB</label>
                                            <br>
                                            <div class="form-group focused" id="limit"> 
        
                                            </div>

                                        </div>
                                            </div> 
 
                                            </div>

                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div> 
 

<script src="/js/user-profil.js" type="text/javascript"> 
</script> 


</body>
</html>
